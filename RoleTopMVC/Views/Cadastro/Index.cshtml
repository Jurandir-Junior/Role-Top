    <head>
        <title>Cadastro - Rolê Top</title>
        <link rel="stylesheet" type="text/css" href="css/style-cadastro.css">
        <link rel="stylesheet" type="text/css" href="css/style-nav.css">
    </head>
    <main>
        <section id="menus">
            <br/>
            <h2>Cadastro</h2>
            <form method="POST" action='@Url.Action("CadastrarCliente", "Cadastro")'>
                <br/>
                <div id="lista">
                    <div id="name">
                        <label for="nome">Nome</label>
                        <input id="nome" type="text" name="nome" minlength="3" required/> 
                    </div>                    
                    <div id="password">
                        <label for="senha">Senha</label>
                        <input id="senha" type="password" name="senha" minlength="6" required/>
                    </div>
                    <div id="e-mail">
                        <label for="email">Email</label>
                        <input id="email" type="email" name="email" required/>
                    </div>
                    <div id="cpf">
                        <label for="cpf">CPF</label>
                        <input id="cpf" type="number" name="cpf" required/>
                    </div>
                    <div>
                        <label for="endereco">Endereço</label>
                        <input id="endereco" type="text" name="endereco"/>
                    </div>
                    <div>
                        <label for="telefone">Telefone</label>
                        <input id="telefone" type="tel" name="telefone" required/>
                    </div>
                    <div>
                        <label for="data-nascimento">Data de Nascimento</label>
                        <input id="data-nascimento" type="date" name="data-nascimento" required>
                    </div>
                    
                        <input type="submit" value="Confirmar" />
                    
                </div>
            </form>                
        </section>
    </main>
